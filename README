NAME
    Dist::Zilla::PluginBundle::Author::DBR - DBRs Dist::Zilla PluginBundle

VERSION
    version 0.777

SYNOPSIS
    This PluginBundle is roughly equivalent to the following "dist.ini":

        # dist.ini
        [@Filter]
          -bundle = @Classic
          -remove = ExtraTests
          -remove = PodVersion

        [Authority]
            authority = cpan:DBR

        [ConfirmRelease]
        [EOLTests]
        [MetaJSON]
        [ModuleBuild]
        [NoTabsTests]
        [ReadmeFromPod]
        [TestRelease]
        [AutoPrereqs]
        [Test::ReportPrereqs]
        [Test::CheckDeps]
        [ReportPhase]
        [ReportVersions]
        [Test::MinimumVersion]
        [CheckPrereqsIndexed]
        [CheckVersionIncrement]
        [SpellingCommonMistakesTests]
        [Test::UseAllModules]
        [MetaProvides::Class]
        [SchwartzRatio]
        [MetaTests]
        [CheckExtraTests]
        [RunExtraTests]
        [InstallGuide]
        [PodWeaver]

        [InstallRelease]
          install_command  = cpanm

        [PruneCruft]
          except = '.gitignore'

        [ExecDir]
          dir= bin

